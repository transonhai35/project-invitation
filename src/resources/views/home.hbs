<script>
  document.getElementById('dl-pdf').onclick = function()  {
    var element = document.getElementById('ex-table');
    var opt = {
      margin: 1,
      filename: 'myfile.pdf',
      image: { type: 'jpeg', quality: 0.98 },
      htmlcanvas: { scale: 2 },
      jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
    };

    html2pdf(element, opt);
  };
</script>

